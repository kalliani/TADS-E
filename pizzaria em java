import java.util.Scanner;

public class pizzaria {
    public static void main(String[]args){
        Scanner entrada = new Scanner(System.in);
        int pm;
        int pmp;
        int pc;
        int pcp;
        int pn;
        int pnp;
        System.out.println("Qual o preço da pizza marguerita?");
        pm = entrada.nextInt();
        System.out.println("Quantas unidades você vendeu?");
        pmp = entrada.nextInt();
        System.out.println("Qual o preço da pizza de calabresa?");
        pc = entrada.nextInt();
        System.out.println("Quantas unidades você vendeu?");
        pcp = entrada.nextInt();
        System.out.println("Qual o preço da pizza napolitana?");
        pn = entrada.nextInt();
        System.out.println("Quantas unidades você vendeu?");
        pnp = entrada.nextInt();
        entrada.close();
        System.out.println("Você conseguiu R$" + (pm*pmp + pcp*pc + pnp*pn) + " em vendas hoje!");
    }
}
